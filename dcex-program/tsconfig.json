{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "types": ["vitest/globals"]
  },
  "include": ["tests/**/*.ts", "idl/**/*.json"],
  "exclude": ["node_modules"]
}
